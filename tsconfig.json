{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": false,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@element-plus-pro/*": ["packages/*"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "include": ["index.ts", "packages/**/*"],
  "exclude": ["node_modules", "dist", "play", "docs"]
}
